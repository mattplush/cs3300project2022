<head>
  <title>Bootstrap 5 Website Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<style>
  .buttons{
    width: 200px;
  }
  .heading{
    font-size: 60px;
  }
  .form{
    height: 50px;
    font-size: 20px;
  }
  .labels{
    font-size: 30px;
  }
</style>
<div class="container p-3 mb-2 bg-secondary text-white">
<p align="center" class="heading"> Sign up</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field form-outline mb-4">
      <%= f.label :email, class: "form-label labels"  %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form" %>
    </div>

    <div class="field form-outline mb-4">
      <%= f.label :password, class: "form-label labels"  %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form"%>
    </div>

    <div class="field form-outline mb-4">
      <%= f.label :password_confirmation, class: "form-label labels"  %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form" %>
    </div>

    <div class="actions text-center">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block mb-4 buttons" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "users/shared/links" %>
  </div>
</div>
