<head>
  <title>Bootstrap 5 Website Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>

</head>
<style>
  .buttons{
    width: 200px;
  }
  .heading{
    font-size: 60px;
  }
  .form{
    height: 50px;
    font-size: 20px;
  }
  .labels{
    font-size: 30px;
  }
</style>
<div class="container p-3 mb-2 bg-secondary text-white">
<p align="center" class="heading">Log in</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-outline mb-4">
    <%= f.label :email, class: "form-label labels" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form" %>
  </div>

  <div class="field form-outline mb-4">
    <%= f.label :password, class: "form-label labels" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="row mb-4">
      <div class="col d-flex justify-content-center">
        <div class="field form-check">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="actions text-center">
    <%= f.submit "Log in", class: "btn btn-primary btn-block mb-4 buttons" %>
  </div>
<% end %>
<div class="text-center">
  <%= render "users/shared/links" %>
</div>
</div>